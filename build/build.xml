<?xml version="1.0" encoding="UTF-8"?>
<project name="info.marcojahn.jsbfilegen" basedir="../" default="main">

	<property name="src.dir" value="src/main/java" />
	<property name="target.dir" value="target" />
	<property name="classes.dir" value="${target.dir}/classes" />
	<property name="jar.dir" value="${target.dir}/jar" />

	<property name="classname" value="JsbFileGen" />
	<property name="main-class" value="info.marcojahn.jsbfilegen.${classname}" />

	<target name="main" depends="clean,jar" />
	<!--<target name="clean-build" depends="clean,jar" />-->

	<target name="clean" description="Clean">
		<delete dir="${target.dir}" />
	</target>

	<target name="jar" description="Build jar">
		<antcall target="compile" />
		<mkdir dir="${jar.dir}" />
		<jar destfile="${jar.dir}/${classname}.jar" basedir="${classes.dir}">
			<manifest>
				<attribute name="Main-Class" value="${main-class}" />
			</manifest>
		</jar>
	</target>

	<target name="compile">
		<mkdir dir="${classes.dir}" />
		<javac srcdir="${src.dir}" destdir="${classes.dir}" />
	</target>

</project>